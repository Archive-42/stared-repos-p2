.important
    margin 30px 0
    border 3px solid #F5F2F0
    border-radius 6px

    &__header
        margin 0
        padding 21px 25px 0
        border none

    &__type
        font-weight: 700;
        font-size: 17px;

    &__type::before
        display inline-block
        min-width 30px
        font-size 20px

    &__title
        display inline
        margin 0
        font-size 128%
        font-weight 700

        a, a u
            color inherit
            text-decoration none

        a:hover u
            text-decoration underline

    &__content
        margin 12px 25px 22px

        & > .spoiler
            border 0
            background none
            margin 15px 0
            padding 10px 20px 10px 0

        & > .spoiler + .spoiler
            margin-top -15px

        & .spoiler__button
            color #747361

    &_warn &__type::before
        @extend $font-warning
        color #ffb200

    &_smart &__type::before
        @extend $font-info
        color #0083b3

    &_ponder &__type::before
        @extend $font-help
        color #ba6eff

    &_ok &__type::before
        @extend $font-ok
        color #83b100

    @media tablet
        &__header
            margin 0
            padding 10px 12px 0
            border none

        &__content
            margin 6px 12px 11px

    @media print
        page-break-inside avoid
