doctype html
html
  head
      block head
        title="Infinium"
        meta(name="title" property="og:title" content="Infinium")
        meta(property="og:type" content="App")
        meta(name="image" property="og:image" content="https://live.staticflickr.com/65535/50933692371_34f4a5edf3_m.jpg")
        meta(name="description" property="og:description" content="A website created so that the ordinary human can escape from their own reality and enter a world of science fiction and fantasy. Browse endlessly through the countless tales of magic and wonder or create your own world with the story creation tools available. Follow your friends and interact with their recounts of heroism and adventure by liking and commenting.")
        meta(name="author" content="Scott Smith, Rhys Previte, Michael Jensen, Dale Sakamoto")
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/layout.css')
        link(rel='stylesheet' href='/stylesheets/footer.css')
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&display=swap")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@900&display=swap")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100;900&display=swap")
        script(src="/javascripts/layout.js" type="module" defer)
        script(src="/javascripts/modal.js" type="module" defer)
      block head_trailer
  body
    header
      .header
        .header-inside-container
          .title
            if (contextControls === 'story-edit' || contextControls === 'story-edit-with-publish' || contextControls === 'not-home')
              a.logo-anchor(href="/")
                img(src="/images/infinity.jpg", alt="Infinity" class="infinity_image")
                .title_name Infinium
            else
              img(src="/images/infinity.jpg", alt="Infinity" class="infinity_image")
              .title_name Infinium
            if contextMessage
              .title_greeting= contextMessage
            else if !aboutPage
              a(href='/about').title_greeting-link Live Long and Prosper
            else
              .title_greeting Live Long and Prosper
            if contextControls
              if (contextControls === 'story-edit' || contextControls === 'story-edit-with-publish')
                button.story-save.rainbow-button(type='submit' form='story-edit-form' value="Save") Save
              if (contextControls === 'story-edit-with-publish')
                button.story-publish.rainbow-button(type='button' value="Publish") Publish
          .icons
            if locals.authenticated
              include user-loggedin-dropdown-include
            else
              include user-logged-out-include
    block content
    include modal-include
    include footer
