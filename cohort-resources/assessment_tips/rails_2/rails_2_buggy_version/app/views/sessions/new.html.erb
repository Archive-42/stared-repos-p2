<h1>Sign In</h1>

<form action="<%= session_url %>%" method="POST">
    <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">
    <label>Username:
        <input name ="users[username]" value="">
    </label>
    <label>Password:
        <input name ="users[password]" value="">
    </label>
    <button type="submit">Sign In</button>
</form>