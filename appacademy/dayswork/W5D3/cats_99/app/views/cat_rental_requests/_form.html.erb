<% 
  if edit 
    heading = "Updating a rental request"
    action_url = cat_rental_request_url(cat_rental_request)
  else
    heading = "Adding a new rental request"
    action_url = cat_rental_requests_url
  end
 %>


<form action="<%= action_url %>" method="POST">
  <% if edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end  %>

    <select name="cat_rental_request[cat_id]" id="cat_id">
        <option disabled >Please select</option>

        <% cats.each do |kitty| %>

            <option value=<%= kitty.id %>  <%= kitty.id == cat_rental_request.cat_id ? "selected" : "" %> >
                <%= kitty.name %>
            </option>
        <% end %>
    </select>

  
  <br/>
  <label for="start_date">Start Date<label>
  <input type="date" name="cat_rental_request[start_date]" id="start_date" value="<%= cat_rental_request.start_date.to_s %>">
  <br/>
  <label for="end_date">End Date<label>
  <input type="date" name="cat_rental_request[end_date]" id="end_date" value="<%= cat_rental_request.end_date.to_s %>">
  <br/>
  <input type="submit" value="Save">
</form>